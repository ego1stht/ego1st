class sinirsizBomba {
public:
	int bombasayisi=5;
	int fark;
	int sinirsizB=99999;

	int farkhesapla() {

		fark = sinirsizB - bombasayisi;
		return fark;
	}

	int bombaFulle() {

		bombasayisi = fark + bombasayisi;
		return bombasayisi;
	}


}bomba;

