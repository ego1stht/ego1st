class altinHilesi
{
public:
	int altin=99999;
	int baslangic;
	int oyundakialtin = 0;

	int altinIslem() {

		baslangic = oyundakialtin;

		if (baslangic > 0) {

			baslangic = altin;
		}
		else if(baslangic == 0) {

			baslangic = altin;
		}
		else  (baslangic < 0); {

						baslangic = altin;
		}
		return altin;
	}

}altin;

class wallHack
{
public:
	int karsiTakim;
	int gorunmeme;
	int bakilmama=100;

	int WallHack() {

		if (bakilmama=100) {

			karsiTakim = gorunmeme;

		}
		else (bakilmama = 0); {

			karsiTakim = bakilmama;

			if (bakilmama = 100) {

				karsiTakim = gorunmeme;
			}
		}
		return karsiTakim;
	}

}oyuncu;


class aimBot
{
public:
	int aim = 0;
	int adamKafa = 100;

	int aimIslem() {
		while (1) {

			if (aim = 0) {
				aim = adamKafa;
			}

			if (aim = 100) {

				break;
			}
		
	    }
		return aim;
	}

}aim;

class olumsuzluk {
public:

	int can=0;
	int oyundakican;
	int fullCan=100;
	int artis;

	int artisHesapla() {

		can = oyundakican;
		artis = fullCan - can;
		return artis;
	}

	int canFulle() {

		can = can + artis;
		return can;
	}

}oyuncu1;

class sinirsizMermi {

public:
	int mermi = 0;
	int fullmermi = 9999999;
	int oyundakimermi=30;

	int mermiFulle() {

		if (oyundakimermi = mermi) {

			oyundakimermi = fullmermi;
		}
		else (oyundakimermi = 30); {

			oyundakimermi = fullmermi;

		} if (oyundakimermi < 30) {

			oyundakimermi = fullmermi;

		}
		return oyundakimermi;
	}
}oyundakimermi;


class enguzelsilah {
public:
	int goodwp=3;
	int nowwp=badwp;
	int badwp=1;
    
	int silahAl() {

		if (nowwp=badwp) {

			nowwp = goodwp;

		}
		if (nowwp = nowwp) {
			nowwp = goodwp;
		}
		return nowwp;
	}

}silah;


class hizliGecis {

public: 
	int normalGecis=5;
	int olmasiGereken=0;
	int fark;

	int farkhesapla() {

		fark = normalGecis - olmasiGereken;

		return fark;
	}

	int gecisAyarla() {

		olmasiGereken = olmasiGereken - fark;
		return olmasiGereken;
	}

}gecisSure;


